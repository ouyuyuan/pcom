 restrt=.false., # 使用restart场
 snbc=1, # 盐度自然恢复边界条件
 tnbc=1, # 温度自然恢复边界条件
 gm90=1, # GM90 沿等位密面混合
 implicitvmix=1, # 隐式垂直混合
 asselin_b=1, # 正压Asselin滤波
 asselin_c=1, # 斜压Asselin滤波
 asselin_t=1, # 温盐Asselin滤波
 smtha=0, # 正压高纬平滑
 smthb=0, # 斜压高纬平滑
 smthc=0, # 温盐高纬平滑
 smth_start_nlat=70.0, # 北半球滤波起始纬度
 smth_start_slat=-70.0, # 南半球滤波起始纬度
 fcof=0.25, # 高纬滤波系数
 unesco=1, # UNESCO 计算密度
 boussinesq=0, # Boussinesq 近似
 monloop=1, # 使用月平均（1-12月）的强迫场(pcom_bcf_mn.nc)
 yearloop=0, # 使用年平均的强迫场(pcom_bcf_yr.nc)
 monlong=0, # 用逐月月平均强迫场(pcom_bcf_mn_re.nc)
 daylong=0, # 用逐日日平均强迫场（尚未加入）
 hourlong=0, # 用逐时平均强迫场（尚未加入）
 /

 &mpicontrl
 ncpux=8, # 纬向cpu个数
 ncpuy=4, # 经向cpu个数
 /

 &tsteps 
 stager_t=1, # 交错时间积分
