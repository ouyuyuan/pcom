 dtuv=3600, # 斜压积分步长(秒)
 dtsf=120, # 正压积分步长(秒)
 /

 &mixing
 fam=0, # 读入am
 fah=0, # 读入ah
 fkm=0, # 读入km
 fkh=0, # 读入kh
 am_c=1.0e7, # 侧向摩擦系数
 ah_c=1.0e7, # 侧向混合系数
