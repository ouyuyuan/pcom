 km_c=0.1, # 垂直摩擦系数
 kh_c=0.1, # 垂直混合系数
 cdbot=2.6e-3, # 海底摩擦系数
 /

 &filter 
 afb1=0.25, # 正压Asselin滤波系数
 afc1=0.25, # 斜压Asselin滤波系数
 aft1=0.25, # 温盐Asselin滤波系数
 /

 &io
